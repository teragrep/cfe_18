<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teragrep.cfe18.Cfe04TransformMapper">


    <!-- insert             ( p_cfe_04_id INT,
                              p_name VARCHAR(255),
                              p_write_meta BOOLEAN,
                              p_write_default BOOLEAN,
                              p_default_value VARCHAR(255),
                              p_destination_key VARCHAR(255),
                              p_regex VARCHAR(255),
                              p_format VARCHAR(255) ) -->
    <select id="create" resultMap="insertedID" statementType="CALLABLE">
        {CALL
        flow.insert_cfe_04_transform(#{param1},#{param2},#{param3},#{param4},#{param5},#{param6},#{param7},#{param8})}
    </select>


    <!-- get                ( cfe04_id INT, tx_id INT ) -->
    <select id="get" resultMap="getCfe04Transforms" statementType="CALLABLE">
        {CALL flow.select_cfe_04_transforms(#{param1},#{param2})}
    </select>
    <resultMap type="com.teragrep.cfe18.handlers.entities.Cfe04Transform" id="getCfe04Transforms">
        <result property="id"               column="id"/>
        <result property="cfe04Id"          column="cfe_04_id" />
        <result property="name"             column="name" />
        <result property="writeMeta"        column="write_meta"/>
        <result property="writeDefault"     column="write_default"/>
        <result property="defaultValue"     column="default_value"/>
        <result property="destinationKey"   column="destination_key"/>
        <result property="regex"            column="regex"/>
        <result property="format"           column="format"/>
    </resultMap>


    <!-- GET ALL        ( tx_id INT ) -->
    <select id="getAll" resultMap="all" statementType="CALLABLE">
        {CALL flow.select_all_cfe_04_transforms(#{param1})}
    </select>
    <resultMap id="all" type="com.teragrep.cfe18.handlers.entities.Cfe04Transform" >
        <result property="id"               column="id"/>
        <result property="cfe04Id"          column="cfe_04_id" />
        <result property="name"             column="name" />
        <result property="writeMeta"        column="write_meta"/>
        <result property="writeDefault"     column="write_default"/>
        <result property="defaultValue"     column="default_value"/>
        <result property="destinationKey"   column="destination_key"/>
        <result property="regex"            column="regex"/>
        <result property="format"           column="format"/>
    </resultMap>


    <!-- DELETE         ( transform_id INT ) -->
    <select id="delete" statementType="CALLABLE">
        {CALL flow.delete_cfe_04_transform(#{param1})}
    </select>


    <!-- ID return map -->
    <resultMap id="insertedID" type="com.teragrep.cfe18.handlers.entities.Cfe04Transform">
        <result property="id"                       column="id"/>
    </resultMap>


</mapper>

