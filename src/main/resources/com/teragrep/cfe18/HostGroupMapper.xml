<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teragrep.cfe18.HostGroupMapper">


    <!-- insert             (  hostGroupName VARCHAR(255), type VARCHAR(255) )  -->
    <select id="create" resultMap="insertedID" statementType="CALLABLE">
        {CALL location.insert_host_group(#{param1},#{param2})}
    </select>

    <!-- insert             (  proc_host_id INT, p_host_group_id INT )  -->
    <select id="create" resultMap="insertedID" statementType="CALLABLE">
        {CALL location.insert_host_to_group(#{param1},#{param2})}
    </select>


    <!-- get group          ( host_group_id INT, tx_id INT ) -->
    <select id="get" resultMap="group" statementType="CALLABLE">
        {CALL location.select_host_group(#{param1},#{param2})}
    </select>
    <resultMap id="group" type="com.teragrep.cfe18.handlers.entities.HostGroup">
        <result property="id"                   column="id"/>
        <result property="hostGroupName"        column="group_name"/>
        <result property="hostGroupType"        column="host_type"/>
    </resultMap>

    <!-- get hosts in group  ( host_group_id INT, tx_id INT ) -->
    <select id="getHosts" resultMap="hosts" statementType="CALLABLE">
        {CALL location.select_hosts_in_group(#{param1},#{param2})}
    </select>
    <resultMap id="hosts" type="com.teragrep.cfe18.handlers.entities.HostGroup">
        <result property="hostId"               column="host_id"/>
    </resultMap>


    <!-- GET ALL           ( tx_id INT ) -->
    <select id="getAll" resultMap="all" statementType="CALLABLE">
        {CALL location.select_all_host_groups(#{param1})}
    </select>
    <resultMap id="all" type="com.teragrep.cfe18.handlers.entities.HostGroup">
        <result property="id"                   column="host_group_id"/>
        <result property="hostGroupName"        column="host_group_name"/>
        <result property="hostGroupType"        column="host_group_type"/>
        <result property="hostId"               column="host_id"/>
        <result property="md5"                  column="host_md5"/>
    </resultMap>


    <!-- Delete  ( p_host_id INT, p_host_group_id INT )  -->
    <select id="delete" statementType="CALLABLE">
        {CALL location.delete_host_from_group(#{param1},#{param2})}
    </select>

    <!-- Delete  ( host_group_id INT ) -->
    <select id="delete" statementType="CALLABLE">
        {CALL location.delete_host_group(#{param1})}
    </select>


    <!-- ID return map -->
    <resultMap id="insertedID" type="com.teragrep.cfe18.handlers.entities.HostGroup">
        <result property="id"       column="id"/>
    </resultMap>

</mapper>

