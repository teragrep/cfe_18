<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teragrep.cfe18.CaptureMetaMapper">

    <!-- insert              ( capture_id INT, capture_meta_key VARCHAR(1024),
                                                capture_meta_value VARCHAR(1024) ) -->
    <select id="create" resultMap="insertedID" statementType="CALLABLE">
        {CALL
        cfe_18.insert_capture_meta(#{param1},#{param2},#{param3})}
    </select>


    <!-- get                ( capture_id INT, tx_id INT ) -->
    <select id="get" resultMap="getCaptureMeta" statementType="CALLABLE">
        {CALL cfe_18.select_capture_meta(#{param1},#{param2})}
    </select>
    <resultMap type="com.teragrep.cfe18.handlers.entities.CaptureMeta" id="getCaptureMeta">
        <result property="captureId"                column="capture_id"/>
        <result property="captureMetaKey"           column="capture_meta_key"/>
        <result property="captureMetaValue"         column="capture_meta_value"/>
    </resultMap>


    <!-- get ALL            ( tx_id INT ) -->
    <select id="getAll" resultMap="all" statementType="CALLABLE">
        {CALL
        cfe_18.select_all_capture_metas(#{param1})}
    </select>
    <resultMap id="all" type="com.teragrep.cfe18.handlers.entities.CaptureMeta">
        <result property="captureId"                column="capture_id"/>
        <result property="captureMetaKey"           column="capture_meta_key"/>
        <result property="captureMetaValue"         column="capture_meta_value"/>
    </resultMap>


    <!-- delete             ( capture_id INT ) -->
    <select id="delete" statementType="CALLABLE">
        {CALL
        cfe_18.delete_capture_meta(#{param1})}
    </select>


    <!-- get key value      ( meta_key VARCHAR(1024), meta_value VARCHAR(1024), tx_id INT )  -->
    <select id="getKeyValue" resultMap="keyValue" statementType="CALLABLE">
        {CALL cfe_18.select_capture_meta_key_value(#{param1},#{param2},#{param3})}
    </select>
    <resultMap id="keyValue" type="com.teragrep.cfe18.handlers.entities.CaptureDefinition">
        <result property="id"                       column="capture_id"/>
        <result property="tag"                      column="tag"/>
        <result property="sourcetype"               column="sourcetype"/>
        <result property="application"              column="application"/>
        <result property="captureIndex"             column="captureIndex"/>
    </resultMap>


    <!-- ID return map -->
    <resultMap id="insertedID" type="com.teragrep.cfe18.handlers.entities.CaptureDefinition">
        <result property="id"                       column="id"/>
    </resultMap>

</mapper>
