<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.teragrep.cfe18.HostMapper">

    <!-- Insert host  ( proc_MD5 VARCHAR(32), proc_fqhost VARCHAR(128), proc_hub_fq VARCHAR(128) )  -->
    <select id="createCfe" resultMap="insertedCfeID" statementType="CALLABLE">
        {CALL
        location.insert_cfe_host(#{param1},#{param2},#{param3})}
    </select>


    <!-- Insert relp  ( proc_MD5 VARCHAR(32), proc_fqhost VARCHAR(128) ) -->
    <select id="createRelp" resultMap="insertedRelpID" statementType="CALLABLE">
        {CALL
        location.insert_relp_host(#{param1},#{param2})}
    </select>


    <!-- get    ( proc_host_id INT, tx_id INT ) -->
    <select id="getCfe" resultMap="getCfeHost" statementType="CALLABLE">
        {CALL cfe_00.select_cfe_host(#{param1},#{param2})}
    </select>
    <resultMap id="getCfeHost" type="com.teragrep.cfe18.handlers.entities.HostCfe">
        <result property="id"               column="id"/>
        <result property="md5"              column="host_md5"/>
        <result property="fqHost"           column="host_fq"/>
        <result property="hubId"            column="hub_id"/>
        <result property="hubFq"            column="hub_fq"/>
    </resultMap>

    <!-- get    ( proc_host_id INT, tx_id INT ) -->
    <select id="getRelp" resultMap="getRelpHost" statementType="CALLABLE">
        {CALL cfe_00.select_relp_host(#{param1},#{param2})}
    </select>
    <resultMap id="getRelpHost" type="com.teragrep.cfe18.handlers.entities.HostRelp">
        <result property="id"               column="id"/>
        <result property="md5"              column="host_md5"/>
        <result property="fqHost"           column="host_fq"/>
    </resultMap>


    <!-- GET ALL Cfe  ( tx_id INT ) -->
    <select id="getAllCfe" resultMap="allCfe" statementType="CALLABLE">
        {CALL location.select_all_cfe_hosts(#{param1})}
    </select>
    <resultMap id="allCfe" type="com.teragrep.cfe18.handlers.entities.HostCfe">
        <result property="id"               column="id"/>
        <result property="md5"              column="host_md5"/>
        <result property="fqHost"           column="host_fq"/>
        <result property="hubId"            column="hub_id"/>
        <result property="hubFq"            column="hub_fq"/>
    </resultMap>

    <!-- GET ALL Relp  ( tx_id INT ) -->
    <select id="getAllRelp" resultMap="allRelp" statementType="CALLABLE">
        {CALL location.select_all_relp_hosts(#{param1})}
    </select>
    <resultMap id="allRelp" type="com.teragrep.cfe18.handlers.entities.HostRelp">
        <result property="id"               column="id"/>
        <result property="md5"              column="host_md5"/>
        <result property="fqHost"           column="host_fq"/>
    </resultMap>


    <!-- Delete Cfe  ( proc_host_id INT ) -->
    <select id="deleteCfe" statementType="CALLABLE">
        {CALL location.delete_cfe_host(#{param1})}
    </select>

    <!-- Delete Relp  ( proc_host_id INT ) -->
    <select id="deleteRelp" statementType="CALLABLE">
        {CALL location.delete_relp_host(#{param1})}
    </select>


    <!-- ID return map -->
    <resultMap id="insertedCfeID" type="com.teragrep.cfe18.handlers.entities.HostCfe">
        <result property="id"       column="id"/>
    </resultMap>

    <!-- ID return map -->
    <resultMap id="insertedRelpID" type="com.teragrep.cfe18.handlers.entities.HostRelp">
        <result property="id"       column="id"/>
    </resultMap>

</mapper>

